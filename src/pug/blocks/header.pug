        div(class="header__content")
            a(href="./index.html")
                img(src="./imgs/logo/logo.png")
            div(class="address")
                svg(width="16" height="22" viewBox="0 0 16 22")
                    use(xlink:href="./imgs/icons/sprites.svg#address_header")
                div(class="address__select-wrapper")
                    select(class="address__select")
                        option() г. Ростов-на-Дону
            div(class="phone")
                a(class="phone__link" href="tel:+78633032825") <svg width="16" height="22" viewBox="0 0 16 22"> <use xlink:href="./imgs/icons/sprites.svg#phone_header"></use></svg>
                    div(class="phone__number") +7 (863) <span class="phone__number-style">303-28-25</span>
            nav(class="nav")
                ul(class="nav__user")
                    li(class="nav__user-item login")
                        a(class="nav__link") <span class="nav__user-text"> Вход </span>
