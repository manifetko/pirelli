                        a(class="nav__link") <span class="nav__user-text"> ред.профиль </span>
                    li(class="nav__user-item exit" style="display:none;") 
                        a(class="nav__link") <span class="nav__user-text"> выход </span>
                div(class="nav__cart")
                    a(href="./cart.html" class="nav__cart")
                        div(class="nav__cart-icon nav__cart-icon") 3
                        div(class="nav__cart-heading") Корзина
                    a(href="./personal-orders.html" class="nav__orders")
                        div(class="nav__orders-icon nav__cart-icon") 3
                        div(class="nav__cart-heading") Заказы
