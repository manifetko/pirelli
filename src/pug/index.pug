                            ul(class="search__select-list")
                                li(class="search__select-item")
                                    div(class="form__label") Ширина
                                    div(class="form__select-wrapper")
                                        select(class="form__select")
                                li(class="search__select-item")
                                    div(class="form__label") Высота
                                    div(class="form__select-wrapper")
                                        select(class="form__select")
                                li(class="search__select-item")
                                    div(class="form__label") Диаметр
                                    div(class="form__select-wrapper")
                                        select(class="form__select")
                                li(class="search__select-item")
                                    div(class="form__label") Сезонность
                                    div(class="form__select-wrapper")
                                        select(class="form__select")
                            a(href="./search-results.html" class="btn btn-search") Искать
                        form(class="search__form")
                            div(class="search__header")
                                img(src="./imgs/disc-search.jpg" class="search__img")
                                h1(class="search__heading") Подобрать Диски
                            ul(class="search__select-list")
                                li(class="search__select-item")
                                    div(class="form__label") Ширина
                                    div(class="form__select-wrapper")
                                        select(class="form__select")
                                li(class="search__select-item")
                                    div(class="form__label") Высота
                                    div(class="form__select-wrapper")
                                        select(class="form__select")
                                li(class="search__select-item")
                                    div(class="form__label") Отверстий
                                    div(class="form__select-wrapper")
                                        select(class="form__select")
                                li(class="search__select-item")
                                    div(class="form__label") PCD
                                    div(class="form__select-wrapper")
                                        select(class="form__select")
                            a(href="./search-results.html" class="btn btn-search") Искать
                        form(class="search__form")
                            div(class="search__header")
                                img(src="./imgs/auto-search.png" class="search__img")
                                h1(class="search__heading") Подобрать авто
                            div(class="search__select-item search__select-auto")
                                ul(class="search__label")
                                    li(class="search__label-item search__label--active") 1.Марка &gt;
                                    li(class="search__label-item") Модель &gt;
                                    li(class="search__label-item") Год выпуска &gt;
                                    li(class="search__label-item") Двигатель &gt;
                                    li(class="search__label-item") Коплектация
                                input(class="search__input-auto" type="search")
                            a(href="./search-results.html" class="btn btn-search") Искать
                    include ./blocks/slider.pug
                    include ./blocks/michelin-tires.pug
            include ./blocks/footer.pug
        include ./blocks/overlay-login.pug
        script(src="./main.min.js" type="text/javascript")