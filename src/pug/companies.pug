doctype html
html(lang="en")
    head
        title Компании
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(href="./main.min.css" type="text/css" rel="stylesheet")
    body
        div(class="wrapper")
            include ./blocks/header.pug
            div(class="container")
                main(class="container__content")
                    ul(class="companies")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-1.png")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-2.png")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-3.png")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-4.png")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-5.png")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-6.png")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-7.png")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-8.png")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-9.png")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-10.png")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-11.png")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-12.png")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-13.png")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-14.png")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-15.png")
                        li(class="companies__item")
                            img(class="companies__img" src="./imgs/logo/brands-16.png")
                    include ./blocks/slider.pug
                    include ./blocks/michelin-tires.pug
            include ./blocks/footer.pug
        form(class="overlay-form")
            div(class="overlay-form__window")
                div(class="overlay-form__heading") Быстрый заказ
                div(class="overlay-form__content")
                    h1(class="overlay-form__tires-name") Зимние шины Michelin X-Ice North 4 195/65 R15 95T XL
                    div(class="calculator")
                        div(class="calculator__price") 6 460.70 руб.
                        ul(class="calculator__vars")
                            li(class="calculator__minus calculator__vars-item") -
                            li(class="calculator__quantity calculator__vars-item") 4шт
                            li(class="calculator__plus calculator__vars-item") +
                    div(class="overlay-form__main-content")
                        ul(class="overlay-form__inputs")
                            li(class="overlay-form__inputs-item")
                                label(class="form__label") Имя:
                                input(class="form__input")
                            li(class="overlay-form__inputs-item")
                                label(class="form__label") Телефон:
                                input(class="form__input")
                            li(class="overlay-form__inputs-item")
                                label(class="form__label") Электронная почта:
                                input(class="form__input")
                        div(class="overlay-form__img")
                            img(class="overlay-form__img-tires" src="./imgs/overlay-tires.jpg")
                            button(class="overlay-form__submit btn" type="submit") купить
        include ./blocks/overlay-login.pug
        script(src="./main.min.js" type="text/javascript")